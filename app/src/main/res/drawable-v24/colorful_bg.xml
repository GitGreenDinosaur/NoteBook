<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 填充的颜色 -->
        <solid android:color="#ccfbff" />

    <!--
    好看的渐变色对
    EF96C5 : CCFBFF
    EAD6EE : A0F1EA
    #EEBD89 : D13ABD
    F9957F : F2F5D0
    EAE5C9 : 6CC6CB
    EF33B1 : F6E6BC
    9FA5D5 : E8F5C8
    C973FF : #AEBAF8
    0C7BB3 : F2BAE8
    80E2FD : A37BFF 918DFE
    -->

    <!--设置渐变-->
    <gradient
        android:angle="0"
        android:endColor="#A37BFF"
        android:startColor="#80E2FD" />
    <!--angle控制渐变的方向-->
    <!-- 设置按钮的四个角为弧形 -->
    <!-- android:radius 弧形的半径 -->
    <corners android:radius="120dp" />
    <!-- padding：Button里面的文字与Button边界的间隔 -->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />

</shape>


